<Application x:Class="LlmChat.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LlmChat.Wpf">
    <Application.Resources>
        <!-- Global theme colors -->
        <SolidColorBrush x:Key="AppBackground" Color="#111827"/>
        <!-- gray-900 -->
        <SolidColorBrush x:Key="PaneBackground" Color="#1F2937"/>
        <!-- gray-800 -->
        <SolidColorBrush x:Key="UserBubble"   Color="#2563EB"/>
        <!-- blue-600 -->
        <SolidColorBrush x:Key="BotBubble"    Color="#374151"/>
        <!-- gray-700 -->
        <SolidColorBrush x:Key="TextOnDark"   Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Accent"       Color="#00A2FF"/>
    </Application.Resources>

</Application>
