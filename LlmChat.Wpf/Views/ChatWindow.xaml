<Window x:Class="LlmChat.Wpf.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:LlmChat.Wpf.Converters"
        Title="LlmChat"
        Width="520" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}"
        Foreground="{StaticResource TextOnDark}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <conv:RoleToBrushConverter x:Key="RoleToBrushConverter"/>
        <conv:RoleToAlignmentConverter x:Key="RoleToAlignmentConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               Text="LLM Chat"
               FontSize="20" FontWeight="SemiBold"
               Foreground="{StaticResource Accent}"
               HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Chat area -->
        <Border Grid.Row="1" Background="{StaticResource PaneBackground}" CornerRadius="10">
            <ScrollViewer x:Name="ChatScrollViewer"
                    VerticalScrollBarVisibility="Auto"
                    Padding="10"
                    BorderThickness="0">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="12"
                      Background="{Binding Role, Converter={StaticResource RoleToBrushConverter}}"
                      HorizontalAlignment="{Binding Role, Converter={StaticResource RoleToAlignmentConverter}}"
                      Margin="6" Padding="10"
                      MaxWidth="360">
                                <!-- Force readable text on all bubbles -->
                                <TextBlock Text="{Binding Content}" Foreground="White" TextWrapping="Wrap" FontSize="14"/>
                                <Border.Triggers>
                                    <!-- Simple fade-in on load -->
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.18"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                            From="6,12,6,6" To="6" Duration="0:0:0.18"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Input area -->
        <Border Grid.Row="2" Background="{StaticResource PaneBackground}" CornerRadius="10" Margin="0,10,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputBox"
                 Grid.Column="0"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontSize="14"
                 Background="#2B2B2B"
                 Foreground="White"
                 BorderThickness="0"
                 MinHeight="56"
                 VerticalScrollBarVisibility="Auto"
                 KeyDown="InputBox_KeyDown"
                 Padding="10"/>

                <Button Grid.Column="1"
                Content="Send"
                Command="{Binding SendCommand}"
                Margin="8,0,0,0"
                Padding="16,10"
                Width="96"
                Height="44"
                Background="{StaticResource Accent}"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
