<Window x:Class="LlmChat.Wpf.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:LlmChat.Wpf.Converters"
        xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
        Title="LlmChat - Multi-Model AI Assistant"
        Width="560" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}"
        Foreground="{StaticResource TextOnDark}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <conv:RoleToBrushConverter x:Key="RoleToBrushConverter"/>
        <conv:RoleToAlignmentConverter x:Key="RoleToAlignmentConverter"/>
        <conv:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <conv:BoolToSendTextConverter x:Key="BoolToSendTextConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Style hyperlinks to use accent color -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource Accent}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               Text="LLM Chat - Multi-Model AI"
               FontSize="20" FontWeight="SemiBold"
               Foreground="{StaticResource Accent}"
               HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Model Selection -->
        <Border Grid.Row="1" Background="{StaticResource PaneBackground}" CornerRadius="8" Padding="12" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Model:" 
                          VerticalAlignment="Center" 
                          Foreground="{StaticResource TextOnDark}"
                          FontWeight="SemiBold"
                          Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1"
                         ItemsSource="{Binding AvailableModels}"
                         SelectedItem="{Binding SelectedModel}"
                         FontSize="14"
                         Padding="8,4"
                         Background="#3C3C3C"
                         Foreground="Green"
                         BorderBrush="{StaticResource Accent}"
                         BorderThickness="1"/>

                <TextBlock Grid.Column="2"
                          Text="{Binding SelectedModel, StringFormat=' {0}'}"
                          VerticalAlignment="Center"
                          Foreground="{StaticResource Accent}"
                          FontWeight="Bold"
                          Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Chat area -->
        <Border Grid.Row="2" Background="{StaticResource PaneBackground}" CornerRadius="10">
            <Grid>
                <!-- Messages -->
                <ScrollViewer x:Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled"
                              PanningMode="VerticalOnly"
                              Padding="10"
                              BorderThickness="0"
                              ScrollChanged="ChatScrollViewer_ScrollChanged">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12"
                                        Background="{Binding Role, Converter={StaticResource RoleToBrushConverter}}"
                                        HorizontalAlignment="{Binding Role, Converter={StaticResource RoleToAlignmentConverter}}"
                                        Margin="6" Padding="10"
                                        MaxWidth="400">
                                    <ContentControl Content="{Binding}">
        
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <!-- Default: selectable plain text (User) -->
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding Content}"
                                                                     IsReadOnly="True"
                                                                     Background="Transparent"
                                                                     BorderThickness="0"
                                                                     Foreground="White"
                                                                     TextWrapping="Wrap"
                                                                     Padding="0"
                                                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <!-- Assistant: render Markdown for richer formatting -->
                                                    <DataTrigger Binding="{Binding Role}" Value="Assistant">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <md:MarkdownScrollViewer Markdown="{Binding Content}"
                                                                                           Background="Transparent"
                                                                                           TextElement.Foreground="White"
                                                                                           TextElement.FontSize="14"
                                                                                           Padding="0"
                                                                                           IsSelectionEnabled="True"
                                                                                           VerticalScrollBarVisibility="Disabled"
                                                                                           HorizontalScrollBarVisibility="Disabled"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>

                                    <Border.Triggers>
                                        <!-- Simple fade-in on load -->
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="0" To="1" Duration="0:0:0.18"/>
                                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        From="6,12,6,6" To="6" Duration="0:0:0.18"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Typing/Thinking indicator -->
                <Border Background="#22000000"
                        CornerRadius="8"
                        Padding="8,6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="16"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Thinking" Foreground="White" FontStyle="Italic" Margin="0,0,8,0"/>
                        <Ellipse Width="6" Height="6" Fill="White" Opacity="0.2" Margin="2,0">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0.2" To="1" Duration="0:0:0.5" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse Width="6" Height="6" Fill="White" Opacity="0.2" Margin="2,0">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             BeginTime="0:0:0.15"
                                                             From="0.2" To="1" Duration="0:0:0.5" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse Width="6" Height="6" Fill="White" Opacity="0.2" Margin="2,0">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             BeginTime="0:0:0.3"
                                                             From="0.2" To="1" Duration="0:0:0.5" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Input area -->
        <Border Grid.Row="3" Background="{StaticResource PaneBackground}" CornerRadius="10" Margin="0,10,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputBox"
                 Grid.Column="0"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontSize="14"
                 Background="#2B2B2B"
                 Foreground="White"
                 BorderThickness="0"
                 MinHeight="56"
                 VerticalScrollBarVisibility="Auto"
                 KeyDown="InputBox_KeyDown"
                 Padding="10"
                 IsEnabled="{Binding IsBusy, Converter={StaticResource BoolNegationConverter}}"/>

                <Button Grid.Column="1"
                Content="{Binding IsBusy, Converter={StaticResource BoolToSendTextConverter}}"
                Command="{Binding SendCommand}"
                Margin="8,0,0,0"
                Padding="16,10"
                Width="96"
                Height="44"
                Background="{StaticResource Accent}"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
